@page
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            display: grid;
            grid-gap: 0px;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-wrapper {
            display: grid;
            gap: 0;
            justify-items: center;
            margin:0;
        }


        .login-container {
            background-color: white;
            border: 1px solid #ddd;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 500px;
            padding: 20px;
            display: grid;
            gap: 10px;
        }

        .login-title {
            background: #483d811A;
            width: 100%;
            border: 1px solid #ccc;
            border-radius: 8px 8px 0 0;
            gap: 0;
        }

        .text-login {
            margin:10px;
            color: #214946;
            padding: 2px;
        }

         .input-field {
            width: 100%;
            padding: 10px 0;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            gap: 5px;
        }

        .input-field :focus {
               color:#000
              
        }


        .login-button {
            display: flex;
            align-items: center;
            flex-direction: column;
            margin-top:10px;
        }

            .login-button button {
                padding: 10px 20px;
                color: #214946;
                border: none;
                border-radius: 4px;
                border: solid 1px #214946;
                cursor: pointer;
                font-size: 1rem;
            }

            .login-button button:hover {
                background-color: #214946;
                color: #f4f4f4;
            }

        .error {
            color: red;
            font-size: 0.9rem;
            margin-top: 10px;
        }

        .logo-container {
            position: relative;
            display: inline-block;
            left: 32%;
            width: 200px;
            height:100px;
        }

        .half-circle {
            position: absolute;
            z-index: -1;
            right: 0;
            bottom:-15px;
        }

        .small-rect {
            position: absolute;
            left: 45px;
            bottom: -20px;
        }

        .small-circle {
            position: absolute;
            left: 35px;
            bottom: 40px;
        }

        .rect {
            position: absolute;
            left: 0;
            bottom: 0;
        }

        .mandotary-star::after {
            content: "*";
            color: red;
        }

        .company-name {
            text-align: center;
            font-size: 40px;
            font-weight: bold;
        }
       
        @@media (max-width: 768px) {
            .login-container {
                padding: 15px;
            }

            .text-login {
                font-size: 1rem;
            }

            .company-name {
                font-size: 1.2rem;
            }

            .login-button button {
                font-size: 0.9rem;
                padding: 8px 16px;
            }

            .logo-container svg {
                width: 40px;
                height: 40px;
            }
        }

        @@media (max-width: 480px) {
            .text-login {
                font-size: 0.9rem;
            }

            .company-name {
                font-size: 1rem;
            }

            .login-button button {
                font-size: 0.8rem;
                padding: 6px 12px;
            }
        }

    </style>
<body>
    <div class="logo-container">
        <svg class="half-circle" width="100" height="100">
            <circle cx="0" cy="40" r="40" style="fill:#214946;"></circle>
        </svg>

        <svg class="small-rect" width="100" height="100">
            <rect x="40" y="40" width="40" height="40" style="fill:#483d81;"></rect>
        </svg>

        <svg class="small-circle" width="50" height="50">
            <circle cx="30" cy="30" r="15" style="fill:#483d8b;"></circle>
        </svg>

        <svg class="rect" width="100" height="100">
            <rect x="50" y="60" width="30" height="50" style="fill:#483d8b;"></rect>
        </svg>
    </div>
    <div class="company-name">Company Name</div>
    <div class="login-wrapper">
        <div class="login-title">
            <h3 class="text-login">Login</h3>
        </div>
        <div class="login-container">
            <label class="mandotary-star">User Login</label>
            <input class="input-field" type="text" id="username" required>
            <label class="mandotary-star">Password</label>
            <input class="input-field" type="password" id="password" required>
            <p id="error-message" class="error"></p>
        </div>
        <div class="login-button">
            <button onclick="handleLogin()">Login</button>
        </div>
    </div>


    <script>
        function handleLogin() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const errorMessage = document.getElementById('error-message');

            errorMessage.textContent = '';

            if (username === '' || password === '') {
                errorMessage.textContent = 'All fields are required.';
                return;
            }

            const mockDatabase = [
                { login: 'admin', password: '1234', type: 0 },
                { login: 'user', password: 'abcd', type: 1 }
            ];

            const user = mockDatabase.find(
                (u) => u.login === username && u.password === password
            );

            if (user) {
                alert(`Welcome ${user.type === 0 ? 'Admin' : 'User'}!`);
            } else {
                errorMessage.textContent = 'Invalid credentials.';
            }
        }
    </script>
</body>
